<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.repository.mybatis.CustomerMapper">
    <select id="findCustomerById" parameterType="Long" resultType="com.springboot.domain.Customer">
        Select id,   name, phone
        From customer
        where id = #{id}
    </select>

    <insert id="insertCustomer" parameterType="com.springboot.domain.Customer">
        insert into customer (name, phone)
        values (#{name}, #{phone})
    </insert>
    <update id="updateCustomerPhoneById" parameterType="com.springboot.domain.Customer" >
        update customer
        set phone =#{phone}
        where id = #{id}
    </update>
<!--#{}가 SQL문 안에 1개만 있으면 → 단일 값(parameterType = 기본형)
#{}가 2개 이상이면 → 객체 또는 @Param 사용 필수-->
    <delete id="deleteById" parameterType="Long">
        delete from customer where id = #{id}
    </delete>

</mapper>